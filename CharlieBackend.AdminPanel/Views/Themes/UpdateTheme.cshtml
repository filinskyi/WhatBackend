@model CharlieBackend.Core.DTO.Theme.UpdateThemeDto

@{
    Layout = "_Layout";
}

<div id="content-wrapper" class="d-flex flex-row  justify-content-center">

    <div class="container mt-3 col-5">

        <h1 class="h3 mb-2 text-gray-800">Edit theme @ViewBag.</h1>

        <div class="card shadow mb-4">

            <div class="modal-body">
                <form method="post" asp-action="UpdateTheme" asp-controller="Themes" asp-route-id="@ViewBag.Theme.Id">

                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" asp-for="Name" value="@ViewBag.Theme.Name">
                    </div>

                    <div class="mt-3">
                        <a class="btn btn-secondary" asp-action="AllThemes" asp-controller="Themes">Close</a>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>

                </form>
            </div>

        </div>
    </div>
</div>
